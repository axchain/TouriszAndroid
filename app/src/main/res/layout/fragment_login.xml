<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".user.view.fragment.LoginFragment"
    android:gravity="center">

    <EditText
        android:id="@+id/edtUname"
        style="@style/InputTextStyle"
        android:layout_width="@dimen/input_width"
        android:layout_height="@dimen/input_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:padding="@dimen/margin_small"
        android:background="@android:color/transparent"
        />

    <View
        android:layout_width="@dimen/input_width"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="center"
        />


    <RelativeLayout
        android:layout_width="@dimen/input_width"
        android:layout_height="@dimen/input_height"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_medium">

        <EditText
            android:id="@+id/edtPassword"
            style="@style/InputTextStyle"
            android:layout_width="@dimen/input_width"
            android:layout_height="@dimen/input_height"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="@dimen/margin_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/margin_xsmall"
            app:srcCompat="@drawable/ic_visibility"
            android:layout_alignParentEnd="true"
            android:id="@+id/imgToggle"
            />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/input_width"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_gravity="center"
        />

    <Button
        style="@style/ButtonBlackTextStyle"
        android:id="@+id/btnLogin"
        android:layout_width="@dimen/input_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/login"
        android:textColor="@color/black"
        />

    <TextView
        style="@style/SmallWhiteTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_xsmall"
        android:gravity="center"
        android:text="@string/login_with"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_xsmall"
            android:src="@drawable/ic_fb" />

        <ImageView
            android:id="@+id/imgGplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_xsmall"
            android:src="@drawable/ic_gplus" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtForgotUname"
                style="@style/SmallWhiteTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/forgot_uname"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtForgotPass"
                style="@style/SmallWhiteTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/forgot_pass"
                android:textColor="@color/black"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <Button
        style="@style/ButtonBlackTextStyle"
        android:id="@+id/btnSignUp"
        android:layout_width="@dimen/input_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:text="@string/signup"
        />

</LinearLayout>

