<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small">

    <ImageView
        android:id="@+id/imgHotel"
        android:layout_width="@dimen/list_icon_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_eventplaceholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_medium"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDate"
            style="@style/SubTitleBoldTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxLines="1"
           />

        <TextView
            android:id="@+id/txtTitle"
            style="@style/TitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_xxsmall"
            android:layout_marginRight="@dimen/margin_xxsmall"
            android:maxLines="1" />

        <TextView
            android:id="@+id/txtHotelDesc"
            style="@style/SubTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/desc_event_height"
            android:layout_margin="@dimen/margin_xxsmall"
            android:maxLines="2" />

        <TextView
            android:id="@+id/txtBook"
            style="@style/SubTitleWhiteTextStyle"
            android:layout_width="@dimen/book_width"
            android:layout_height="@dimen/book_height"
            android:layout_margin="@dimen/margin_xxsmall"
            android:background="@drawable/button_primary_rectangle"
            android:drawableLeft="@mipmap/ic_book_btn"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:text="@string/book_now" />
    </LinearLayout>


</LinearLayout>