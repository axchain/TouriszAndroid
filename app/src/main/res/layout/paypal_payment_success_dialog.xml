<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_small">

                <TextView
                    android:id="@+id/txtNumberTitle"
                    style="@style/NavTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_small"
                    android:layout_marginTop="@dimen/margin_xxlarge"
                    android:padding="@dimen/margin_medium"
                    android:text="@string/paypal"
                    android:textAllCaps="false" />

                <TextView
                    style="@style/NavTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="@string/booking_confirm"
                    android:textAllCaps="false"
                    />

                <TextView
                    style="@style/NavTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:gravity="center"
                    android:text="@string/paypal_payment_success"
                    android:textAllCaps="false"
                    />

                <com.tourisz.custome_view.PrimaryButton
                    android:id="@+id/btnOk"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/margin_xsmall"
                    android:text="@string/ok"
                    android:textAllCaps="true"
                    />



            </LinearLayout>

        </FrameLayout>

    </FrameLayout>


    <ImageView
        android:id="@+id/imgPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_pay" />

</FrameLayout>